FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

libs ( "libGCEARSM.so" );
//libs ( "libFrozenTurbModels.so" );

application     simpleFoam;//

startFrom       latestTime;

startTime       0;

endTime   18000;

endTime   18000;

deltaT          1;

writeControl    timeStep;

writeInterval   1;

purgeWrite      2;

writeFormat     ascii;

writePrecision  15;

writeCompression uncompressed;

timeFormat      general;

timePrecision   15;

runTimeModifiable yes;//true;

